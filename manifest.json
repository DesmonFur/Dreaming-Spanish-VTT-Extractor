{
  "manifest_version": 3,
  "name": "VTT Snatcher",
  "version": "1.0",
  "permissions": ["webRequest", "storage", "activeTab", "scripting"],
  "host_permissions": ["https://app.dreaming.com/*", "https://*.netlify.app/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "subtitles.png"
  },
  "icons": {
    "512": "subtitles.png"
  }
}
