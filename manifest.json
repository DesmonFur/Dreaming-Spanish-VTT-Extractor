{
  "manifest_version": 3,
  "name": "VTT Snatcher",
  "version": "1.0",
  "permissions": [
    "webRequest",
    "storage",
    "activeTab",
    "scripting",
    "windows",
    "system.display"
  ],
  "host_permissions": [
    "https://app.dreaming.com/*",
    "https://*.netlify.app/*",
    "https://www.lingq.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": "subtitles.png"
  },
  "icons": {
    "512": "subtitles.png"
  }
}
